
import {Sidebar, PopOut} from "sidebar.slint";
import {SearchBar} from "searchbar.slint";
import {Home, Search, Playlists, Settings, SearchScreen} from "screens/screens.slint";
import { TabWidget } from "std-widgets.slint";

export { SearchScreen }

export component App inherits Window {
    preferred-width: 640px;
    preferred-height: 480px;

    callback skip_back <=> sidebar.skip_back;
    callback play_pause <=> sidebar.play_pause;
    callback skip_forward <=> sidebar.skip_forward;

    callback searched <=> search_bar.accepted;

    in property <string> name;
    in-out property <string> song-title <=> sidebar.song-title;
    in-out property <image> cover_art <=> sidebar.cover_art;
    title <=> name;



    HorizontalLayout {



        sidebar := Sidebar {
        }

        VerticalLayout {

            search_bar := SearchBar {}
            
            if(pop_out.current_item == 0) : Home{}
            if(pop_out.current_item == 1) : Search {}
            if(pop_out.current_item == 2) : Playlists {}
            if(pop_out.current_item == 3) : Settings {}
        }


    }
     pop_out := PopOut {
       
    }

}